<div class="home-header">
  <h1><span>Pensamentos</span> dos nossos usuários</h1>

  {{#if search}}
    <p>Buscando por: <span>{{search}}</span></p>
    {{#if toughtQtd}}
      <p>{{toughtQtd}} resultado(s)</p>
    {{else}}
      <p>Não foi encontrado resultado para sua busca</p>
    {{/if}}
  {{/if}}

  <form action="/" method="get">
    <input type="text" name="search" placeholder="Está buscando algo?" />
    <input type="submit" class="btn" value="Buscar" />
  </form>

  <div class="order-container">
    <span>Ordenar por:</span>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>

    <a href="/">Limpar</a>
  </div>
</div>

{{#each arrayToughts}}
  <div class="home-tought">
    <figure>
      <blockquote>"{{this.title}}"</blockquote>
      <figcaption>
        por <span>{{this.userName}}</span>
      </figcaption>
    </figure>
  </div>
{{/each}}