<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />

    <link rel="stylesheet" href="/css/style.css" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <title>Pensamentos</title>
  </head>
  <body>

    <nav id="navbar">
      <a href="/" id="logo">
        <img src="/img/toughts_logo.png" alt="logo-toughts" />
      </a>

      <ul>
        <li><a href="/">Pensamentos</a></li>
        {{! Urls após autenticação }}
        {{#if session.userid}}
          <li><a href="/toughts/dashboard">Dashboard</a></li>
          <li><a href="/logout">Sair</a></li>
        {{else}}
          <li><a href="/login">Entrar</a></li>
          <li><a href="/register">Resgistrar</a></li>
        {{/if}}
      </ul>
    </nav>

    <div class="container">
      {{! Mensagens }}
      {{#if messages.message}}
        <div class="message">
          {{#each messages.message as |message|}}
            </p>{{message}}</p>
          {{/each}}
        </div>
      {{/if}}

      {{{body}}}
    </div>

    <footer>
      <p><span>Toughts</span> &copy; 2023</p>
    </footer>
  </body>
</html>